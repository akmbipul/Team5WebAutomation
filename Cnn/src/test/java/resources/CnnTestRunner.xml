<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Cnn Automation Script " parallel="false">

    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnvName" value="browserstack"/>
    <parameter name="os" value="OS X"/>
    <parameter name="os_version" value="Sierra"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="60.0"/>
    <parameter name="url" value="https://www.cnn.com"/>

    <test name = "Cnn Home">
        <classes>


            <class name="home.TestSearchCoupons"/>
            <class name="home.TestCheckEdition"/>
            <class name="home.TestSearchfood"/>
            <class name="home.TestHomePage"/>
            <class name="home.TestCheckTitle"/>
            <class name="home.TestSearchNews"/>
            <class name="home.TestLive"/>

        </classes>
    </test>

</suite>